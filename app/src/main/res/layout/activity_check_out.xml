<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.niu.cs.z1805839.photoarts1.Checkout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:text="Email Address"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textEmail"
            android:layout_below="@+id/textEmail"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Please Enter a valid Email Address"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewShipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextEmail"
            android:layout_below="@+id/editTextEmail"
            android:layout_marginTop="18dp"
            android:text="SHIPPING ADDRESS"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextShipStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewShipping"
            android:layout_below="@+id/textViewShipping"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Street"
            android:inputType="text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextShipApartment"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextShipStreet"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/editTextShipStreet"
            android:ems="10"
            android:hint="Apartment"
            android:inputType="text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextShipCity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextShipStreet"
            android:layout_below="@+id/editTextShipStreet"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="City"
            android:inputType="textCapWords"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextShipState"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextShipCity"
            android:layout_alignBottom="@+id/editTextShipCity"
            android:layout_toEndOf="@+id/editTextShipCity"
            android:ems="10"
            android:hint="State"
            android:inputType="textCapCharacters"
            android:maxLength="3" />

        <EditText
            android:id="@+id/editTextShipZipCode"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextShipState"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/editTextShipState"
            android:ems="10"
            android:hint="Zip Code"
            android:inputType="number"
            android:maxLength="5"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewBillingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextShipState"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="BILLING ADDRESS"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewShipAddress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewBillingAddress"
            android:layout_alignBottom="@+id/textViewBillingAddress"
            android:layout_toEndOf="@+id/textViewShipping"
            android:text="Same as shipping address"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editTextBillStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="304dp"
            android:ems="10"
            android:hint="Street"
            android:inputType="textPostalAddress"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextBillApartment"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextBillStreet"
            android:layout_alignBottom="@+id/editTextBillStreet"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/editTextBillStreet"
            android:ems="10"
            android:hint="Apartment"
            android:inputType="text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextBillCity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextBillStreet"
            android:layout_below="@+id/editTextBillStreet"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="City"
            android:inputType="textCapCharacters"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextBillState"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextBillCity"
            android:layout_alignBottom="@+id/editTextBillCity"
            android:layout_toEndOf="@+id/editTextBillStreet"
            android:ems="10"
            android:hint="State"
            android:inputType="textCapWords"
            android:maxLength="3" />

        <EditText
            android:id="@+id/editTextBillZipCode"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextBillState"
            android:layout_alignBottom="@+id/editTextBillState"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/editTextBillState"
            android:ems="10"
            android:hint="Zip Code"
            android:inputType="number"
            android:maxLength="5" />

        <TextView
            android:id="@+id/ShippingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="420dp"
            android:text="SHIPPING FEE"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linearLayoutShipFee"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextShipApartment"
            android:layout_below="@+id/ShippingStatus"
            android:layout_marginTop="18dp"
            android:layout_toStartOf="@+id/textViewShipAddress"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerShipFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editTextBillCity"
                android:layout_alignTop="@+id/linearLayoutShipFee" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayoutShipFee"
            android:layout_marginTop="13dp"
            android:text="PAYMENT METHOD"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textViewPayment"
            android:layout_marginTop="42dp"
            android:ems="10"
            android:hint="First Name on Card"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextFirstName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Last Name on Card"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextLastName"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Credit/Debit Card Details"
            android:inputType="number"
            android:maxLength="16"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextExpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextCardNumber"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Exp MM-YYYY"
            android:inputType="number|date"
            android:maxLength="7"
            android:minLines="7"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextCVV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextExpDate"
            android:layout_alignBottom="@+id/editTextExpDate"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/editTextExpDate"
            android:ems="10"
            android:hint="CVV"
            android:inputType="number"
            android:maxLength="4"
            android:minLines="4"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextExpDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:background="@android:color/holo_red_light"
            android:text="Confirm Payment" />

        <Switch
            android:id="@+id/switchInform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewShipAddress"
            android:layout_alignBottom="@+id/textViewShipAddress"
            android:layout_alignEnd="@+id/editTextShipZipCode" />


    </RelativeLayout>

</ScrollView>
