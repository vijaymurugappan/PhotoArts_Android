<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.niu.cs.z1805839.photoarts1">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegistrationPage" />
        <activity android:name=".PhotoCollection" />
        <activity android:name=".PhotoDetails" />
        <activity
            android:name=".ShoppingCart"
            android:label="@string/title_activity_shopping_cart"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Checkout" />
        <activity android:name=".DeleteCartItems" />
        <activity android:name=".CheckoutSummary" />
        <activity android:name=".CustomerMessage" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".UpdateUserInfo" />
        <activity
            android:name=".PreviousPurchasedItemDetails"
            android:label="@string/title_activity_previous_purchased_item_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>